<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.junemon.wastetreatment.feature.FragmentHome"
        android:label="FragmentHome" >
        <action
            android:id="@+id/to_fragmentLogin"
            app:destination="@id/fragmentLogin" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHistory"
        android:name="com.junemon.wastetreatment.feature.FragmentHistory"
        android:label="FragmentHistory" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.junemon.wastetreatment.feature.FragmentProfile"
        android:label="FragmentProfile" />

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.junemon.wastetreatment.feature.FragmentLogin"
        android:label="FragmentLogin" >
        <action
            android:id="@+id/to_fragmentHome"
            app:destination="@id/fragmentHome"
            app:launchSingleTop="true"
            app:popUpTo="@id/fragmentHome"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>